{
  "name": "media-manager",
  "version": "0.1.0",
  "description": "",
  "scripts": {
    "dev": "export NODE_ENV=development && concurrently npm:_watch-server npm:_watch-server-run npm:_watch-static npm:_watch-server-views npm:_watch-client",
    "build": "export NODE_ENV=production && npm run _build-server && npm run _build-server-views && npm run _build-static && npm run _build-client",
    "clean-build": "npm run _clean && npm run build",
    "prod": "export NODE_ENV=production && node ./dist/server/index.js",
    "_clean": "rm -rf ./dist/**",
    "_build-static": "sync-files ./src/static ./dist/static",
    "_watch-static": "sync-files --watch ./src/static ./dist/static",
    "_build-server-views": "sync-files ./src/server-views ./dist/server-views",
    "_watch-server-views": "sync-files --watch ./src/server-views ./dist/server-views",
    "_build-server": "tsc --project ./src/server/tsconfig.json",
    "_watch-server": "tsc --watch --project ./src/server/tsconfig.json",
    "_build-client": "parcel build --no-source-maps ./src/client/index.tsx --out-dir ./dist/static/client",
    "_watch-client": "parcel watch ./src/client/index.tsx --out-dir ./dist/static/client --public-url ./",
    "_watch-server-run": "nodemon -w ./dist/server -w ./dist/server-views ./dist/server/index.js"
  },
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^3.0.3",
    "body-parser": "^1.18.3",
    "connect-mongo": "^2.0.3",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "express-session": "^1.15.6",
    "fs-extra": "^7.0.1",
    "md5-file": "^4.0.0",
    "mime": "^2.4.0",
    "mongoose": "^5.3.14",
    "multer": "^1.4.1",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "pug": "^2.0.3",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/body-parser": "^1.17.0",
    "@types/connect-mongo": "0.0.40",
    "@types/dotenv": "^6.1.0",
    "@types/dropzone": "^5.0.4",
    "@types/express": "^4.16.0",
    "@types/express-session": "^1.15.11",
    "@types/fs-extra": "^5.0.4",
    "@types/md5-file": "^4.0.0",
    "@types/mime": "^2.0.0",
    "@types/multer": "^1.3.7",
    "@types/node": "^10.9.4",
    "@types/passport": "^0.4.7",
    "@types/passport-local": "^1.0.33",
    "@types/pug": "^2.0.4",
    "@types/react": "^16.7.18",
    "@types/react-dom": "^16.0.11",
    "@types/uuid": "^3.4.4",
    "concurrently": "^4.1.0",
    "dropzone": "^5.5.1",
    "mobx": "^5.8.0",
    "mobx-react": "^5.4.3",
    "nodemon": "^1.18.6",
    "parcel-bundler": "^1.10.3",
    "prettier": "^1.16.1",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "sync-files": "^1.0.3",
    "typescript": "^3.1.6"
  }
}
